// Header
// --------------------------------------------------
.header 
{ 
  height:150px;
  /* -moz-box-shadow:0px 0px 3px rgba(80,80,80,.2), 0px 0px 7px rgba(80,80,80,.5);
  -webkit-box-shadow:0px 0px 3px rgba(80,80,80,.2), 0px 0px 7px rgba(80,80,80,.5); 
  box-shadow:0px 0px 3px rgba(80,80,80,.2), 0px 0px 7px rgba(80,80,80,.5);  */
  background-color: $head-bg;
}
.header-inner {
  padding: 50px 0 0px;
  clearfix();

  +mobile() {
    width: auto;
    margin-bottom: 50px;
    padding: 10px;
  }
}

.site-meta {
  
  margin-left: -10px;
  line-height: normal;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;

    +mobile() { line-height: 34px; }
  }
}


.logo-line-before,
.logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
