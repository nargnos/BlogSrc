.posts-expand .post-title {
  font-size: 26px;
  text-align: center;
  word-break: break-word;
  font-weight: $posts-expand-title-font-weight;
  text-shadow: 0px 0px 4px rgba(70, 70, 70, 0.4);
  margin-bottom:0px;
  a:hover{
    text-shadow: 
      0px 0px 4px rgba(70, 70, 70, 0.4),
      0px 0px 15px rgba(70, 70, 70, 0.4); 
  }
  +mobile() {
    font-size: 22px;
  }
}
.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $black-light;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 0px;
    bottom: 0;
    left: 0;
    background-color: #000;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
        
  }

  .fa { font-size: 16px; }
}
