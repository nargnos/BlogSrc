.sidebar {
  position: fixed;
  right: 0;
  top: 0;
  bottom: 0;

  width: 0;
  z-index: $zindex-4;
  -moz-box-shadow:0px 0px 3px rgba(80,80,80,.4), 0px 0px 7px rgba(80,80,80,.7);
  -webkit-box-shadow:0px 0px 3px rgba(80,80,80,.4), 0px 0px 7px rgba(80,80,80,.7); 
  box-shadow:0px 0px 3px rgba(80,80,80,.4), 0px 0px 7px rgba(80,80,80,.7); 
  background: $black-deep;
  -webkit-transform: translateZ(0); // http://stackoverflow.com/questions/17079857/position-fixed-broken-in-chrome-with-flash-behind

  a {
    color: $grey-dark;
    border-bottom-color: $black-light;
    &:hover { color: $gainsboro; }
  }

  +tablet() {
    hide() if not hexo-config('sidebar.onmobile');
  }
  +mobile() {
    hide() if not hexo-config('sidebar.onmobile');
  }

}

.sidebar-inner {
  position: relative;
  padding: 20px 10px;
  color: $grey-dark;
  text-align: center;
}

@import "sidebar-toggle";
@import "sidebar-author";
@import "site-state";
@import "sidebar-feed-link";
@import "sidebar-author-links";
@import "sidebar-blogroll";
@import "sidebar-nav";
@import "sidebar-toc";
@import "sidebar-dimmer" if hexo-config('sidebar.onmobile');
