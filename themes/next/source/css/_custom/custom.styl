// Custom styles.
@font-face {font-family: "Old English Text MT";
  src: url("../fonts/logo.eot"); /* IE9*/
  src: url("../fonts/logo.eot?#iefix") format("embedded-opentype"), /* IE6-IE8 */
  url("../fonts/logo.woff2") format("woff2"), /* chrome、firefox */
  url("../fonts/logo.woff") format("woff"), /* chrome、firefox */
  url("../fonts/logo.ttf") format("truetype"), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url("../fonts/logo.svg#Old English Text MT") format("svg"); /* iOS 4.1- */
}
.logo-font {
                font: 38px/1.12 "Old English Text MT","Algerian","Times New Roman", Georgia, Times, sans-serif !important;
                color: #000321;
                text-shadow:  0px 0px 3px #505050;
                
            span, &:hover {
                color: #000321;
                text-shadow: 
                    0px 0px 20px rgba(50,50,50,.80),
                    0px 0px 2px #505050;
            }
            &:active{
                text-shadow: 
                    0px 0px 10px rgba(50,50,50,.80),
                    0px 0px 2px #505050;
            }
        }
.pace .pace-progress{
    background-color: $black-deep;
}    


canvas,.logo-font,.menu-item-icon,.post-title-link,.post-block .post-button .btn,.post-nav-item a,.pagination,.sidebar a,.pagination .prev, .pagination .next, .pagination .page-number,.posts-expand .post-tags a{
    -webkit-transition: all 300ms ease;
    -moz-transition: all 300ms ease;
    transition: all 300ms ease;
}

canvas{
    filter: drop-shadow(0px 7px 4px rgba(0,0,0,.2));
    -ms-filter: drop-shadow(0px 7px 4px rgba(0,0,0,.2));
    -webkit-filter: drop-shadow(0px 7px 4px rgba(0,0,0,.2));
}
main .post-block:hover .post-button{
    opacity: 1;
}
main .post-block .post-button{
    opacity: 0;
    -webkit-transition: opacity 500ms ease 100ms;
    -moz-transition: opacity 500ms ease 100ms;
    transition: opacity 500ms ease 100ms;  
}

.button-style{
    &:hover{
    text-shadow:  0px 0px 5px rgba(20,20,20,.5),0px 0px 8px rgba(20,20,20,.4);
    }
}

.post-category{
    a{
        color:$grey-dim;
    }
}
.box-shadow,.post-body > table,.highlight,hr,blockquote{
    border-radius: 3px !important;
-moz-box-shadow: 0px 0px 3px rgba(80, 80, 80, 0.1), 0px 0px 7px rgba(80, 80, 80, 0.1);
-webkit-box-shadow: 0px 0px 3px rgba(80, 80, 80, 0.1), 0px 0px 7px rgba(80, 80, 80, 0.1);
box-shadow: 0px 0px 3px rgba(80, 80, 80, 0.1), 0px 0px 7px rgba(126, 120, 120, 0.10);
}
.posts-expand .post-body img{
    border-width: 0px;
}
hr{
    background-color: $gray-lighter;
    background-image:none;
    height: 1px;
}
.post-body >p> a{
    color: #1aaeff;
    text-shadow: 0 0 3px rgba(26, 174, 255, 0.3);
    &:hover{
        text-shadow: 0 0 5px rgba(26, 174, 255, 0.5), 0 0 2px rgba(26, 174, 255, 0.3);
    }
}
.posts-expand .post-body {
    text-align: left;
}

p{
    margin: 0 0 15px 0;
}

ul {
    margin-top: 10px;
    margin-bottom: 10px;
}

.post-button {
    margin-top: 0px;
}

